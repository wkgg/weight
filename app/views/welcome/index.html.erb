    <%= f.text_field :score1D %>
  </p>

<p>
  <%= f.label :方案二 %><br>
  <%= f.text_field :score2A %>
  <%= f.text_field :score2B %>
  <%= f.text_field :score2C %>
  <%= f.text_field :score2D %>
</p>

<p>
  <%= f.label :专家二打分 %><br>
  <%= f.label :方案一 %><br>
  <%= f.text_field :scoreX1A %>
  <%= f.text_field :scoreX1B %>
  <%= f.text_field :scoreX1C %>
  <%= f.text_field :scoreX1D %>
</p>

<p>
<%= f.label :方案二 %><br>
<%= f.text_field :scoreX2A %>
<%= f.text_field :scoreX2B %>
<%= f.text_field :scoreX2C %>
<%= f.text_field :scoreX2D %>
</p>

  <p>
    <%= f.submit name="确定"%>
  </p>
<% end %>

<% unless @weightA.nil? %>
    <div>初始权重: <%=@weightA[0]%>,  <%=@weightA[1]%>,  <%=@weightA[2]%>,  <%=@weightA[3]%></div>
    <div>专家一修订权重: <%=@weightB[:wang][0]%>,  <%=@weightB[:wang][1]%>,  <%=@weightB[:wang][2]%>,  <%=@weightB[:wang][3]%></div>
    <div>专家二修订权重: <%=@weightB[:zhang][0]%>,  <%=@weightB[:zhang][1]%>,  <%=@weightB[:zhang][2]%>,  <%=@weightB[:zhang][3]%></div>
<% end %>
