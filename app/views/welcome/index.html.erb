    <%= f.label :初始权重 %><br>
    <%= f.text_field :weight11 %>
    <%= f.text_field :weight12 %>
    <%= f.text_field :weight13 %>
    <%= f.text_field :weight14 %>
    <br />
    <%= f.text_field :weight21 %>
    <%= f.text_field :weight22 %>
